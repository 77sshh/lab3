@model TRPO_Lab3.Server.Models.CircleSegmentModel

@{
    ViewData["Title"] = "Расчет площади сегмента круга";
}

<div class="row">
    <div class="col-md-6">
        <h1>Расчет площади сегмента круга</h1>

        <form method="post" asp-controller="CircleSegment" asp-action="Calculate">
            <div class="form-group">
                <label asp-for="radiu5">Радиус круга</label>
                <input asp-for="radiu5" class="form-control" placeholder="Введите значение радиуса круга" autocomplete="off"/>
                <span asp-validation-for="radiu5" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="angle">Угол сегмента</label>
                <input asp-for="angle" class="form-control" placeholder="Введите значение угла сегмента" autocomplete="off"/>
                <span asp-validation-for="angle" class="text-danger"></span>
            </div>

            <input type="submit" value="Рассчитать" class="btn btn-primary" />
        </form>

        @if (ViewBag.Area != null)
        {
                    <div class="mt-3">
                        <h2>Результат:</h2>
                            <p>Площадь сегмента круга: @ViewBag.Area.ToString("0.#####")</p>
                    </div>
        }

        @if (ViewBag.ErrorMessage != null)
        {
                    <div class="mt-3">
                        <p style="color: red;">@ViewBag.ErrorMessage</p>
                    </div>
        }
    </div>

    <div class="col-md-6">
        <img src="~/images/111.png" class="img-fluid" alt="Шаровый сектор">
    </div>
</div>
